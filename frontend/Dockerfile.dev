FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install

# Copy the rest of the code
COPY . .

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000
ENV WDS_SOCKET_PORT=4444

# Expose port
EXPOSE 3000

# Start development server with hot reloading
CMD ["npm", "start"] 